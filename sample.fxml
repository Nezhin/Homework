<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet /styles/style.css?>

<VBox id="vBox" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets><URL value="@/styles/style.css" /></stylesheets>
    <TextArea id="textArea" fx:id="textArea" editable="false" opacity="0.7f" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" editable="true" onAction="#sendMessage" promptText="Enter message..." visible="true" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" top="5.0" />
            </HBox.margin>
        </TextField>
        <Button id="button" fx:id="button" onAction="#sendMessage" text="Send" visible="true">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </Button>
    </HBox>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</VBox>
